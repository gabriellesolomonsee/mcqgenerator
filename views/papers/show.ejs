<%- include("../partials/header.ejs") %>
<div class="container">
  <%- include("../partials/alert.ejs") %>
  <h3><%= paper.assessment %></h3>
  <h6>By: <%= paper.author %></h6>
  <h6>Published on: <%= paper.publishedDate %></h6>
  <p><%= paper.topics %></p>
  <p><%= paper.mcqcomments %></p>
  <p><%= paper.sqcomments %></p>
  <p><%= paper.eqcomments %></p>
  <!-- Option to edit the paper info -->
  <a href="/papers/<%= paper.id %>/edit" class="btn btn-primary">Edit paper info</a>
  <!-- Option to add questions to the paper -->
  <a href="/questions/newqn" class="btn btn-primary">Add questions</a>
  <!-- Option to edit the question -->
  <a href="/questions/<%= paper.id %>/editqn" class="btn btn-primary">Edit questions</a>
  <!-- Option to show all the questions after previewing the info -->
  <a href="/questions/<%= paper.id %>/showquestions" class="btn btn-primary">Show questions</a>
  <!-- Option to see the answers of the existing questions -->
  <a href="/questions/<%= paper.id %>/showanswers" class="btn btn-primary">Show answers</a>
</div>
<%- include("../partials/footer.ejs") %>